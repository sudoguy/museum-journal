<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="tabel assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/kspu_dean/static/src/css/kspu_dean.css"/>
            </xpath>
        </template>


        <record id="view_kspu_dean_students_tree" model="ir.ui.view">
            <field name="name">kspu.dean.student.tree</field>
            <field name="model">kspu.dean.student</field>
            <field name="arch" type="xml">
                <tree string="Список студентов">
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="st_sex"/>
                    <field name="faculty"/>
                    <field name="stgroup"/>

                    <field name="form_of_pay" colspan="6" string="Форма оплаты"/>
                    <!--<field name="payment_method" colspan="6" string="Вид финансирования"/>-->
                    <field name="offset_book_num" colspan="6" string="Номер зачетной книжки"/>
                    <field name="course_of_study" string="Курс обучения"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_students_form" model="ir.ui.view">
            <field name="name">kspu.dean.student.form</field>
            <field name="model">kspu.dean.student</field>
            <field name="arch" type="xml">
                <form string="Студент" version="8.0">
                    <sheet>
                        <group string="Студент" col="2" colspan="2">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="st_sex"/>
                            <field name="faculty"/>
                        </group>
                        <group string="Обучение" col="2" colspan="2">
                            <field name="stgroup"/>
                            <field name="course_of_study" string="Курс обучения"/>
                            <field name="student" string="Информация об обучении"/>
                        </group>

                        <group col="6" colspan="4">
                            <field name="form_of_pay" colspan="3" string="Форма оплаты"/>
                            <field name="payment_method" colspan="3" string="Вид финансирования"/>
                            <field name="offset_book_num" colspan="3" string="Номер зачетной книжки"/>
                            <field name="contract_number" colspan="3" string="Номер договора"/>
                            <field name="tel_number" colspan="3" string="Номер телефона"/>
                            <field name="foreign_languages" colspan="3" string="Иностранный язык"/>
                        </group>
                    </sheet>
                    <notebook>

                        <page string="Адрес студента">
                            <field name="address" colspan="2" string="Адрес"/>
                        </page>

                        <page string="Паспорт студента">
                            <field name="passports" colspan="2" string="Паспорт"/>
                        </page>

                        <page string="Документы об образовании">
                            <field name="education_docs" string="Документы об образовании">
                                <tree string="Данные об образовании">
                                    <field name="name" string="Документ"/>
                                    <field name="isHonor" string="С отличием"/>
                                    <field name="series" string="Серия"/>
                                    <field name="number" string="Номер"/>
                                    <field name="reg_number" string="Регистрационный номер"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Оценки">
                            <field name="grades">
                                <tree>
                                    <field name="subject"/>
                                    <field name="name"/>
                                    <!--<field name="semester"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_students" model="ir.actions.act_window">
            <field name="name">Список студентов</field>
            <field name="res_model">kspu.dean.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kspu_dean_students_tree"/>
        </record>

        <record id="view_kspu_dean_passport_tree" model="ir.ui.view">
            <field name="name">kspu.dean.passport.tree</field>
            <field name="model">kspu.dean.passport</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="passport_id"/>
                    <field name="type_id"/>
                    <field name="serial"/>
                    <field name="number"/>
                    <field name="issuer"/>
                    <field name="issuer_code"/>
                    <field name="date_of_birth"/>
                    <field name="date"/>
                    <field name="birth_place"/>
                    <field name="old_l_name"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_passport_form" model="ir.ui.view">
            <field name="name">kspu.dean.passport.form</field>
            <field name="model">kspu.dean.passport</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Документ удостоверяющий личность">
                        <field name="type_id" string="Тип паспорта"/>
                        <field name="serial" string="Серия"/>
                        <field name="number" string="Номер"/>
                        <field name="date" string="Дата выдачи"/>
                        <field name="issuer" string="Кем выдан"/>
                        <field name="issuer_code" string="Код подразделения"/>
                        <field name="date_of_birth" string="Дата рождения"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_passport" model="ir.actions.act_window">
            <field name="name">Список паспортов</field>
            <field name="res_model">kspu.dean.passport</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_kspu_dean_address_tree" model="ir.ui.view">
            <field name="name">kspu.dean.address.tree</field>
            <field name="model">kspu.dean.address</field>
            <field name="arch" type="xml">
                <tree string="Адреса студентов" default_order="country">
                    <field name="post_index" string="Почтовый индекс"/>
                    <field name="dirty_address" string="Полный адрес"/>
                    <field name="country" string="Страна"/>
                    <field name="region" string="Регион"/>
                    <field name="locality" string="Населенный пункт"/>
                    <field name="street" string="Улица/микрорайон"/>
                    <field name="house" string="Дом"/>
                    <field name="flat" string="Квартира"/>
                    <field name="type" string="Тип адреса"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_address_form" model="ir.ui.view">
            <field name="name">kspu.dean.address.form</field>
            <field name="model">kspu.dean.address</field>
            <field name="arch" type="xml">
                <form string="Адрес студента">
                    <group>
                        <field name="country" string="Страна"/>
                        <field name="post_index" string="Почтовый индекс"/>
                        <field name="region" string="Регион"/>
                        <field name="locality" string="Населенный пункт"/>
                        <field name="street" string="Улица/микрорайон"/>
                        <field name="house" string="Дом"/>
                        <field name="flat" string="Квартира"/>
                        <field name="type" string="Тип адреса"/>
                        <field name="dirty_address" string="Полный адрес"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_kspu_dean_course_tree" model="ir.ui.view">
            <field name="name">kspu.dean.course.tree</field>
            <field name="model">kspu.dean.course</field>
            <field name="arch" type="xml">
                <tree string="Наименование курса">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_course_form" model="ir.ui.view">
            <field name="name">kspu.dean.course.form</field>
            <field name="model">kspu.dean.course</field>
            <field name="arch" type="xml">
                <form string="Название" col="2" colspan="2">
                    <field name="name" string="Курс обучения" col="2" colspan="2"/>
                    <notebook>
                        <page string="Студенты">
                            <field name="students"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_course" model="ir.actions.act_window">
            <field name="name">Список курсов</field>
            <field name="res_model">kspu.dean.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kspu_dean_course_tree"/>
        </record>

        <record id="faculty_view_tree" model="ir.ui.view">
            <field name="name">faculty.tree</field>
            <field name="model">kspu.dean.faculty</field>
            <field name="arch" type="xml">
                <tree string="Факультеты">
                    <field name="name"/>
                    <field name="subjects"/>
                    <field name="dean"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="faculty_view_form" model="ir.ui.view">
            <field name="name">faculty.form</field>
            <field name="model">kspu.dean.faculty</field>
            <field name="arch" type="xml">
                <form string="Форма факультета">
                    <sheet>
                        <group>
                            <field name="name" string="Название"/>
                            <field name="user_id" string="Инженер" groups="kspu_dean.group_kspu_dean_superuser"/>
                            <field name="dean"/>
                            <field name="subjects"/>
                        </group>
                    </sheet>
                    <notebook>
                        <page string="Студенты">
                            <field name="students"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="faculty_action" model="ir.actions.act_window">
            <field name="name">Список факультетов</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kspu.dean.faculty</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_kspu_dean_lang_tree" model="ir.ui.view">
            <field name="name">kspu.dean.lang.tree</field>
            <field name="model">kspu.dean.lang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Язык"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_lang_form" model="ir.ui.view">
            <field name="name">kspu.dean.lang.form</field>
            <field name="model">kspu.dean.lang</field>
            <field name="arch" type="xml">
                <form string="Введите название иностраннного языка" col="2" colspan="2">
                    <field name="name" string="Язык"/>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_lang" model="ir.actions.act_window">
            <field name="name">Список иностранных языков</field>
            <field name="res_model">kspu.dean.lang</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kspu_dean_lang_tree"/>
        </record>

        <record id="student_data_view_tree" model="ir.ui.view">
            <field name="name">studentdata.tree</field>
            <field name="model">kspu.dean.studentdata</field>
            <field name="arch" type="xml">
                <tree string="Информация об обучении">
                    <field name="date_begin" string="Дата начала обучения"/>
                    <field name="date_end" string="Дата окончания обучения"/>
                    <field name="study_form"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="student_data_view_form" model="ir.ui.view">
            <field name="name">studentdata.form</field>
            <field name="model">kspu.dean.studentdata</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_begin" string="Дата начала обучения"/>
                        <field name="date_end" string="Дата окончания обучения"/>
                        <field name="state" string="Статус"/>
                        <field name="study_form" string="Форма обучения"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_kspu_dean_edu_document_form" model="ir.ui.view">
            <field name="name">kspu.dean.edu_document.form</field>
            <field name="model">kspu.dean.edu_document</field>
            <field name="arch" type="xml">
                <form string="Документ об образовании" version="8.0" colspan="2" col="2">
                    <group>
                        <field name="name" colspan="2" string="Документ"/>
                        <field name="isHonor" colspan="2" string="С отличием"/>
                        <field name="series" colspan="2" string="Серия"/>
                        <field name="number" colspan="2" string="Номер"/>
                        <field name="reg_number" colspan="2" string="Регистрационный номер"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_kspu_dean_stgroup_tree" model="ir.ui.view">
            <field name="name">kspu.dean.stgroup.tree</field>
            <field name="model">kspu.dean.stgroup</field>
            <field name="arch" type="xml">
                <tree string="Номер группы и форма обучения">
                    <field name="name"/>
                    <field name="faculty"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_stgroup_form" model="ir.ui.view">
            <field name="name">kspu.dean.stgroup.form</field>
            <field name="model">kspu.dean.stgroup</field>
            <field name="arch" type="xml">
                <form string="Группа" version="8.0">
                    <sheet>
                        <group string="Группа" col="2" colspan="2">
                            <field name="name"/>
                            <field name="faculty"/>
                            <field name="direction"/>
                        </group>
                        <notebook>
                            <page string="Студенты группы">
                                <field name="students"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_stgroup" model="ir.actions.act_window">
            <field name="name">Группы</field>
            <field name="res_model">kspu.dean.stgroup</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kspu_dean_stgroup_tree"/>
        </record>

        <record id="view_kspu_dean_subject_tree" model="ir.ui.view">
            <field name="name">kspu.dean.subject.tree</field>
            <field name="model">kspu.dean.subject</field>
            <field name="arch" type="xml">
                <tree string="Наименование учебной дисциплины">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_kspu_dean_subject_form" model="ir.ui.view">
            <field name="name">kspu.dean.subject.form</field>
            <field name="model">kspu.dean.subject</field>
            <field name="arch" type="xml">
                <form string="Предмет" version="8.0">
                    <group string="Предмет" col="2" colspan="2">
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_kspu_dean_subject" model="ir.actions.act_window">
            <field name="name">Предметы</field>
            <field name="res_model">kspu.dean.subject</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kspu_dean_subject_tree"/>
        </record>

        <record id="grade_view_tree" model="ir.ui.view">
            <field name="name">grade.tree</field>
            <field name="model">kspu.dean.grade</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="student"/>
                    <field name="subject"/>
                    <field name="name"/>
                    <field name="semester"/>
                    <field name="group"/>
                </tree>
            </field>
        </record>

        <record id="grade_view_from" model="ir.ui.view">
            <field name="name">grade.form</field>
            <field name="model">kspu.dean.grade</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="subject"/>
                            <field name="name"/>
                            <field name="semester"/>
                            <field name="exam_report_number"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="grade_action" model="ir.actions.act_window">
            <field name="name">Оценки</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kspu.dean.grade</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="semester_view_tree" model="ir.ui.view">
            <field name="name">semester.tree</field>
            <field name="model">kspu.dean.semester</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='name'/>
                    <field name='date_since'/>
                    <field name='date_till'/>
                </tree>
            </field>
        </record>

        <record id="semester_view_form" model="ir.ui.view">
            <field name="name">semester.form</field>
            <field name="model">kspu.dean.semester</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='date_since'/>
                            <field name='date_till'/>
                        </group>

                        <notebook>
                            <page>
                                <field name="grades"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="semester_action" model="ir.actions.act_window">
            <field name="name">Семестр</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kspu.dean.semester</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="direction_view_tree" model="ir.ui.view">
            <field name="name">direction.tree</field>
            <field name="model">kspu.dean.direction</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='education_level'/>
                    <field name='direction_name'/>
                    <field name='profile'/>
                </tree>
            </field>
        </record>

        <record id="direction_view_form" model="ir.ui.view">
            <field name="name">direction.form</field>
            <field name="model">kspu.dean.direction</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name='education_level'/>
                        <field name='direction_name'/>
                        <field name='profile'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="exam_report_view_form" model="ir.ui.view">
            <field name="name">direction.form</field>
            <field name="model">kspu.dean.exam_report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name='report_number'/>
                        <field name='stgroup'/>
                        <field name='period'/>
                        <field name='date'/>
                    </group>
                    <notebook>
                        <page string="Оценки">
                            <field name="grades">
                                <tree>
                                    <field name="semester"/>
                                    <field name="subject"/>
                                    <field name="group"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
    </data>
</openerp>