<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.module.category" id="module_category_gcap_fix">
            <field name="name">Gravicap - сервис-центр</field>
            <field name="sequence">16</field>
        </record>

        <record id="group_gcap_fix_underuser" model="res.groups">
            <field name="name">Приемщик отдела ремонта</field>
            <field name="category_id" ref="module_category_gcap_fix"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_gcap_fix_user" model="res.groups">
            <field name="name">Инженер отдела ремонта</field>
            <field name="category_id" ref="module_category_gcap_fix"/>
            <field name="implied_ids" eval="[(4, ref('group_gcap_fix_underuser'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_gcap_fix_superuser" model="res.groups">
            <field name="name">Администратор отдела ремонта</field>
            <field name="category_id" ref="module_category_gcap_fix"/>
            <field name="implied_ids" eval="[(4, ref('group_gcap_fix_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
</openerp>